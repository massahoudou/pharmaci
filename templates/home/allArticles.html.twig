{% extends "base2.html.twig" %}

{% block title %}Tous les articles
{% endblock %}
{% block body %}

  <h2 class="text-center mt-5">Tous les articles
  </h2>

  {% if articles is defined and articles != null %}
    <section class="container   mt-5 mb-5 ">

      <div class=" d-flex justify-content-center flex-wrap   ">
        {% for article in articles %}

          <div class="card m-3 shadow-sm" style="width: 25rem;">
            <img src="{{vich_uploader_asset(article, 'fichier')}}" class="card-img-top" alt="...">
            <div class="card-body">

              <div class="metadata">
                <!-- <small class="rounded-pill small">categroies</small> <small class="rounded-pill small">Pays</small> <small class="rounded-pill small">11-12-22021</small>-->
              </div>
              <h4 class="card-title text-capitalize">{{ article.titre }}</h4>
              <p class="card-text">
                {{  article.description |striptags  |u.truncate(100) | raw }}</p>

              <a href="{{ path('single', {slug: article.titre , pays: article.pays} )}}" class=" btn-sante-outline ">
                <span>
                  Lire plus
                  <i class="fas fa-arrow-circle-right"></i>
                </span>
              </a>
            </div>
          </div>

        {% endfor %}

      </div>

    </section>
  {% endif %}

{% endblock %}
