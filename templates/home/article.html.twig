            <a  href="{{ path('all.articles')}}" class="btn btn-success">Voir plus </a>
        </h2>
        <div class=" art  owl-carousel owl-theme  ">
        {% for article in articles %}
            <div class="item">
                <div class="card shadow-sm" style="width: 25rem;">
                    <img src="{{vich_uploader_asset(article, 'fichier')}}" class="card-img-top"
                        alt="...">
                    <div class="card-body">
                       
