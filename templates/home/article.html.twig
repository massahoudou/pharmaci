                        <p class="card-text">
                         {{  article.description |striptags  |u.truncate(90) | raw }}</p>
                            
                            <a href="{{ path('single', {titre: article.titre | replace({' ': '-'}), pays: article.pays} )}}" class=" btn-sante-outline ">
                                <span> Lire plus <i class="fas fa-arrow-circle-right"></i></span>
                            </a>
                    </div>
                </div>
            </div>
        {% endfor %}
            
        </div>
     
    </section>
{% endif %}



