{% extends 'base2.html.twig' %}
{% block body %}


    <h4 class="container my-4 ">Resultat de la recherche
    </h4>



      {% if articles is defined and articles is not null %}
        <div class="my-3 ">
          <section class="container   mt-5 mb-5 ">

            <div class=" d-flex justify-content-center flex-wrap   ">
              {% for article in articles %}

                <div class="card m-3 shadow-sm" style="width: 25rem;">
                  <img src="{{vich_uploader_asset(article, 'fichier')}}" class="card-img-top" alt="...">
                  <div class="card-body">

                    <div class="metadata">
                      <!-- <small class="rounded-pill small">categroies</small> <small class="rounded-pill small">Pays</small> <small class="rounded-pill small">11-12-22021</small>-->
                    </div>
                    <h4 class="card-title text-capitalize">{{ article.titre }}</h4>
                    <p class="card-text">
                      {{  article.description |striptags  |u.truncate(100) | raw }}</p>

                    <a href="{{ path('single', {slug: article.titre , pays: article.pays} )}}" class=" btn-sante-outline ">
                      <span>
                        Lire plus
                        <i class="fas fa-arrow-circle-right"></i>
                      </span>
                    </a>
                  </div>
                </div>

              {% endfor %}

            </div>

          </section>

        </div>
      {% endif %}

      {% if vignettes is defined and vignettes is not null %}
        <div class="my-3 ">
          <div class="container   mt-5 mb-5 ">
            <div class=" d-flex justify-content-center flex-wrap   ">

                    {% for vignette in vignettes %}

                      <div class="card shadow-sm m-2 " style="width: 20rem;">
                        <img src="{{ vich_uploader_asset(vignette, 'fichier')}}" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h4 class="card-title text-capitalize ">{{ vignette.titre }}
                          </h4>
                          <p class="card-text">
                            {{ vignette.description  |striptags  |u.truncate(100) | raw  }}</p>
                          <a href="{{ vignette.flip  ? vignette.flip : ''  }}" target="_blank" data-rel="fh5-light-box-demo" data-href="{{ vignette.flip  ? vignette.flip : ''  }}" data-width="900" data-height="500" data-title="{{ vignette.titre}}" class=" btn-sante-outline ">
                            <span>
                              Lire plus
                              <i class="fas fa-arrow-circle-right"></i>
                            </span>
                          </a>
                        </div>
                      </div>

                    {% endfor %}
                  </div>
                </div>
              </div>

        {% endif %}
        {% if conseils is defined and conseils is not null %}

          <div class="">
            <h3>Conseeils</h3>
          </div>
        {% endif %}

      {% if articles ==  null and vignettes == null  %}
        <div class="container m-5  d-flex justify-content-center align-items-center ">
          <h3>Aucun resultat
          </h3>
        </div>
      {% endif %}



  {% endblock %}
